#!/bin/bash
error_log=/home/log

if [ $# -ne 1 ]; then echo 'No URL specified'; exit 1;fi

curl -s $1  > curl_file2 2>>$error_log
if [ $? -ne 0 ];then echo 'Chyba stahovani'; exit 1;fi

if cmp -s curl_file2 curl_file1>/dev/null 2>>$error_log;
then echo 'stranka  nebyla aktualizovana';
else cat curl_file2 >curl_file1; echo 'byla aktualizovana';
fi

