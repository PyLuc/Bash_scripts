#!/bin/bash

read  -t 5 -p  "Enter the URL of website you want to check" url

#download website content into curl_file2
curl -s $url|md5sum>>logfile

if [ $? -ne 0 ];then echo 'Chyba stahovani'; exit 1;fi

#compare with curl_file1 and check if website was updated
if [ "$(curl -s $url | md5sum)" == "$(cat logfile)" ]; then
  echo "website changed"
  else echo "website not changed"
fi

